<div class="bg-container" style="{% if product %}background-color:  {{ product.metafields.custom.fp_background_couleur_milieu }} {% endif %}">
  <div class="zippy-container">
      <div class="layout only-desktop">
          {%- for block in section.blocks -%}
              <div class="reassurance-container">
                <img src="{{ block.settings.image | image_url: width: 3200, height: 1000 }}" />
                <p style="margin: 5px 0 0; font-weight: bold;">{{ block.settings.title }}</p>
                <p class="message-reassurance">{{ block.settings.text }}</p>
              </div>
          {%- endfor -%}
      </div>
      <div id="carouselExampleControls" class="carousel slide only-mob" data-ride="carousel">
        <div class="carousel-inner">
          {%- for block in section.blocks -%}
            <div class="carousel-item reassurance-container {% if forloop.index == 1 %}active{% endif %}">
              <img src="{{ block.settings.image | image_url: width: 3200, height: 1000 }}" />
              <p style="margin: 5px 0 0; font-weight: bold;">{{ block.settings.title }}</p>
              <p class="message-reassurance">{{ block.settings.text }}</p>
            </div>
          {%- endfor -%}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
  </div>
</div>
  


  {% schema %}
{
  "name": "hp-reassurance-zippy",
  "class": "section-hp-reassurance-zippy",
  "tag": "section",
  "settings": [
  ],
  "max_blocks": 4,
  "blocks": [
    {
      "name": "Card",
      "type": "card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Titre"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Texte"
        }
      ]
    }
  ]
}
{% endschema %}