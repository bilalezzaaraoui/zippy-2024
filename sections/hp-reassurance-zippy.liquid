<div class="zippy-container">
    <div class="layout">
        {%- for block in section.blocks -%}
            <div class="reassurance-container">
              <img src="{{ block.settings.image | image_url: width: 3200, height: 1000 }}" />
              <p>{{ block.settings.title }}</p>
              <p>{{ block.settings.text }}</p>
            </div>
        {%- endfor -%}
    </div>
</div>

  


  {% schema %}
{
  "name": "hp-reassurance-zippy",
  "class": "section-hp-reassurance-zippy",
  "tag": "section",
  "settings": [
  ],
  "max_blocks": 4,
  "blocks": [
    {
      "name": "Card",
      "type": "card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Titre"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Texte"
        }
      ]
    }
  ]
}
{% endschema %}