      "id": "image_1",
      "label": "Image n°1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image n°2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image n°3"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image n°4"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "max_blocks": 6,
