            "label": "Message"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Auteur"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        }
      ]
    }
  ]
}
{% endschema %}