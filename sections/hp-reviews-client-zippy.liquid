<div class="zippy-container">
    <h2 class="super-title">Les clients n'arrêtent pas de vanter l'expérience Zippy</h2>
    <div class="layout">
      <div class="container-one">
        <div class="container-img">
          <img src="{{ section.settings.image_1 | image_url: width: 3200, height: 1000 }}" />
        </div>
        <div class="container-img">
          <img src="{{ section.settings.image_2 | image_url: width: 3200, height: 1000 }}" />
        </div>
        <div class="container-img">
          <img src="{{ section.settings.image_3 | image_url: width: 3200, height: 1000 }}" />
        </div>
        <div class="container-img">
          <img src="{{ section.settings.image_4 | image_url: width: 3200, height: 1000 }}" />
        </div>
      </div>
      <div class="container-two">
          <div class="layout-reviews">
            {%- for block in section.blocks -%}
              <div class="review-container">
                <img src="{{ block.settings.image | image_url: width: 3200, height: 1000 }}" />
                <p>{{ block.settings.message }}</p>
                  <div class="layout-container">
                    <span class="author">{{ block.settings.author }}</span>
                    <div class="verified-badge">
                      <img src="{{ block.settings.icon | image_url: width: 3200, height: 1000 }}" />
                      <span>Acheteur vérifié</span>
                    </div>
                  </div>
              </div>
            {%- endfor -%}
          </div>
          <a href="{{ section.settings.collection.url }}" class="link">Commander maintenant !</a>
      </div>
    </div>
</div>

  


