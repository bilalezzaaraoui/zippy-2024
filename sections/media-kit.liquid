
{% schema %}
{
  "name": "Media Kit",
  "settings": [
    {
      "type": "image_picker",
      "id": "media_kit_image",
      "label": "Media Kit Image",
      "info": "Upload an image for your media kit."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Media Kit"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Describe your media kit here.</p>"
    }
  ],
  "presets": [
    {
      "name": "Media Kit",
      "category": "Media"
    }
  ]
}
{% endschema %}

<style>
    .media-kit {
        text-align: center;
        padding: 20px;
      }
      
      .media-kit img {
        margin-bottom: 20px;
      }
</style>


<div class="media-kit">
  <h2>{{ section.settings.heading }}</h2>
  {% if section.settings.media_kit_image %}
    <img src="{{ section.settings.media_kit_image }}" alt="{{ section.settings.heading }}">
  {% endif %}
  <div>{{ section.settings.description | richtext }}</div>
</div>
